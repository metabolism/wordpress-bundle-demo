 # @subpackage Twenty_Nineteen
 # @since 1.0.0
 #}

<article id="post-{{ post.ID }}" class="{{ post.class }}">
	<header class="entry-header">
		{% if post.sticky and fn('is_home') and not fn('is_paged') %}
			<span class="sticky-post">{{ _x( 'Featured', 'post', 'twentynineteen' ) }}</span>
		{% endif %}
		<h2 class="entry-title"><a href="{{ post.link }}" rel="bookmark">{{ post.title }}</a></h2>
	</header><!-- .entry-header -->

	{% if post.thumbnail %}
		<figure class="post-thumbnail">
			<img src="{{ post.thumbnail.resize(1568) }}" alt="{{ post.thumbnail.alt }}">
		</figure><!-- .post-thumbnail -->
	{% endif %}

	<div class="entry-content">
		{{ post.excerpt|raw }}
	</div><!-- .entry-content -->

	<footer class="entry-footer">
		{% include 'template-parts/content/content-meta.html.twig' %}
	</footer><!-- .entry-footer -->
</article><!-- #post-{{ post.ID }} -->
